@{
    ViewBag.Title = "Home Page";
}
@model Deployment.Web.Models.MessageModel

<div class="row">
    <div class="col-xs-12 col-md-6">
        <h2>Send a message</h2>
        <p>
            This app demos an automated deployment of a Web App, Service Bus Queue, A WebJob, and an Azure SQL Database.
        </p>
        <p>
            To demonstrate that everything works, enter a message in the input field below and click "Send". After the message has
            been dequeued and processed by the WebJob, you should see the message on the Messages tab.
        </p>
        <p>This is a new snippet to ensure proper deployment. </p>
        @using (Html.BeginForm())
        {
            <div class="form-group">
                <label class="control-label">Message</label>
                @Html.TextBoxFor(model => model.Message, new { @class = "form-control" })
            </div>
            <input type="submit" class="btn btn-primary" value="Submit" />
        }
    </div>
</div>
@if (!String.IsNullOrEmpty(Model.Message))
{
    <div class="row margin-top">
        <div class="col-xs-12 col-md-6">
            <div class="alert alert-info">
                The message "@Model.Message" was sent.
            </div>
        </div>
    </div>
}

